<div class="pos">
  <div class="main_content">
    <h1 class="cent">Best results 🏆</h1>

    <div class="col-auto">
        <table class="table">
          <tbody>
            <tr>
              <th>№</th>
              <th>User</th>
              <th>Symbols per minute</th>
              <th>Best time</th>
            </tr>
            <% list_users = User.all %>
            <% index = 0 %>
            <% list_users.length.times do |i| %>
              <tr>
                <td><%= index += 1 %></td>
                <td><%= list_users[i].email %></td>
                <td><%= list_users[i].statistics %></td>
                <td><%= list_users[i].time_best %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br/>
</div>